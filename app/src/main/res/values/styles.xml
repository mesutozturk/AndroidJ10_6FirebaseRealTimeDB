<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MainButton">
        <item name="android:background">@color/butonrengi</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/btnyazi</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_margin">@dimen/butonmargin</item>
    </style>

    <style name="TextViewlar">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_margin">@dimen/butonmargin</item>
        <item name="android:textSize">@dimen/txtyazi</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="TextViewlarlist" parent="TextViewlar">
        <item name="android:textSize">@dimen/txtyazilist</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">0dp</item>
    </style>

    <style name="EditTextler" parent="TextViewlar">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="MainButtonList" parent="MainButton">
        <item name="android:layout_margin">1dp</item>
        <item name="android:textSize">5sp</item>
    </style>
</resources>
